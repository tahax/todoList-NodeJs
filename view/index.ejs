<%- include("./includes/header") %>

<body class="rtl">
    <div class="form-group">
        <h1>کارهای <small>روزمره</small></h1>
        <form action="/admin/add-todo" role="form" class="row w-50 justify-content-center mx-auto" method="POST">
            <div class="input-group">
                <input type="text" name="todo" class="form-control w-50" placeholder="کار امروز" />
                <div class="input-group-prepend">
                    <button type="submit" class="btn btn-primary fa fa-plus" />
                </div>
            </div>
        </form>
        <div class="mx-auto w-50 mb-3 alert alert-primary row">
            <p class="d-inline col">کارهای انجام شده : 
                <span class="badge badge-success badge-pill">0<!-- CompletedTodos --></span>
            </p>
            <p class="d-inline col">کارهای باقی مانده امروز : 
                <span class="badge badge-warning badge-pill">0<!-- RemainingTodos --></span>
            </p>
        </div>
        <div class="d-flex flex-wrap flex-column">
            <% if(lastArray.length > 0){ %>
            <% for (let todo of lastArray){%>
            <div class="row alert <%= todo.completed ? 'alert-success' : 'alert-secondary' %> w-50 mx-auto d-flex justify-content-between">
                <% if(todo.completed){ %>
                    <del><%= todo.text %></del>
                    <a href="/admin/delete-todo/<%= todo.id %>" class="close fa fa-trash" style="color: #888;margin-left: 10px"></a>
                <% }else { %>
                    <%= todo.text %>
                    <span class="d-flex" style="margin-bottom: 0">
                        <a href="/admin/delete-todo/<%= todo.id %>" class="close fa fa-trash" style="color: #888;margin-left: 10px"></a>
                        <a href="/admin/complited-todo/<%= todo.id %>" class="close fa fa-check-square" style="color: #090"></a>
                    </span>    
                <% } %>
                
            </div>
            <% } %>
            <% }else{ %>
            <div class="alert alert-warning w-50 mx-auto">
                <h4 class="alert-heading">هیچ کاری برای امروز نیست</h4>
                <hr>
                <p>می تونی کارای امروزتو بالا بنویسی تا برات ثبت کنم</p>
            </div>
            <% } %>
        </div>
    </div>
</body>

</html>